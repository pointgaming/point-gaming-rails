<div class="row-fluid">
  <div class="span6">
    <div class="page-header">
      <h1>Players</h1>
    </div>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th><%= User.human_attribute_name(:username) %></th>
          <th><%= User.human_attribute_name(:points) %></th>
        </tr>
      </thead>
      <tbody>
        <% @players.each do |user| %>
          <tr>
            <td><%= link_to user.display_name, user %></td>
            <td><%= user.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="span6">
    <div class="page-header">
      <h1>Teams</h1>
    </div>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th><%= Team.human_attribute_name(:username) %></th>
          <th><%= Team.human_attribute_name(:points) %></th>
        </tr>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= link_to team.display_name, team %></td>
            <td><%= team.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

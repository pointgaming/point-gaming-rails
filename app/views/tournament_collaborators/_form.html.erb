<%= form_for :tournament_collaborator, url: user_tournament_collaborators_path(@tournament), html: { autocomplete: :off, :class => 'typeahead', :'data-hook'=>'collaborator-form' } do |f| %>
  <div class="control-group">
    <%= f.text_field :username, :class => 'search-query', placeholder: 'Add Collaborator' %>
  </div>
  <%= f.submit nil, style: "position: absolute; left: -9999px; width: 1px; height: 1px;" %>
<% end %>

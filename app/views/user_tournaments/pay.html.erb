<div class="row-fluid" id="tournaments">
  <h1>Tournament: <%= @tournament.name %></h1>
  <%= render :partial => 'workflow_navigation' %>
  <%= form_for [:user, @tournament], html: { :class => 'form-horizontal', :'data-hook'=>'payment-form' } do |f| %>
    <%= render partial: 'shared/form_errors', locals: {model: f.object} %>

    <div class="row-fluid">
      <div class="span4">
        <div id="prize-pool-widget" class="widget">
          <div class="widget-header">
            <h3>Payment Method</h3>
          </div>
          <div class="widget-content">
          </div>
        </div>
      </div>

      <div class="span8">
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <div class="form-actions">
          <%= f.submit :Next, :class => 'btn btn-primary' %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                      user_tournaments_path, :class => 'btn' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

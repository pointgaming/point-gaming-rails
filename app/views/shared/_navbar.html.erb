<div class="container" id="logo-container">
    <a class="brand" href="/">
        <%= image_tag "logo.png", :alt => "Point Gaming" %>
    </a>
</div>

<div class="navbar">
    <div class="navbar-inner">
        <div class="container">
            <div class="nav-collapse">
                <ul class="nav"> 
                    <%= navItem "Home", "/" %>
                    <%= navItem "Games", "/games" %>
                    <%= navItem "Leagues", "/leagues" %>
                    <%= navItem "Tournaments", "/tournaments" %>
                    <%= navItem "Streams", "/streams" %>
                    <%= navItem "Store", "/store" %>
                    <%= navItem "Forums", "/forums" %>
                    <%= navItem "FAQ", "/faq" %>
                </ul>

                <ul class="nav pull-right">
                    <form class="navbar-search pull-left" action="">
                        <input type="text" class="search-query span2" placeholder="Search" />
                    </form>

                    <% if user_signed_in? %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.username %> (500) <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <%= link_to "Settings", "/settings" %>
                                </li>
                                <li>
                                    <%= link_to "Logout", destroy_user_session_path, :method=>'delete' %>
                                </li>
                            </ul>
                        </li>
                    <% else %>
                        <li>
                            <%= link_to("Login", new_user_session_path) %>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>

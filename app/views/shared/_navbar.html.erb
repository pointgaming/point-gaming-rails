<%- @hide_nav ||= false %>

<div class="navbar">
  <div class="navbar-inner">
    <div class="container"> 
      <!-- .btn-navbar is used as the toggle for collapsed navbar content --> 
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a>
      <div class="row-fluid">
        <div class="span12">
          <div class="span2"> 
            <!-- Be sure to leave the brand out there if you want it shown --> 
            <%= link_to image_tag('logo_full.png'), root_path, :class => 'brand' %>
          </div>
            <% unless @hide_nav %>
              <div class="span10"> 
                <!-- Everything you want hidden at 940px or less, place within here -->
                <div class="nav-collapse collapse navbar-responsive-collapse"> 
                  
                  <div class="span8">
                    <!-- .nav, .navbar-search, .navbar-form, etc -->
                    <ul class="nav primary">
                      <%= navItem "Games", games_path %>
                      <%= navItem "Tournaments", tournaments_path %>
                      <%= navItem "Streams", streams_path %>
                      <%= navItem "Store", store_path %>
                      <%= navItem "Forums", forum_path %>
                    </ul>
                  </div>

                  <div class="span4">
                    <%= form_tag search_path, method: :get, autocomplete: :off, :class => "navbar-search search-form" do %>
                      <fieldset>
                        <div class="input-append">
                          <input class="span2" id="navbar-search-button" placeholder="Search" type="text" name="query">
                          <button class="btn" type="submit" value="submit"><%= link_to image_tag('mag-glass.png') %></button>
                        </div>
                      </fieldset>
                    <% end %>

                    <ul class="nav admin pull-right">
                      <% if user_signed_in? %>
                        <li class="dropdown"> 
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <%= "#{current_user.username}" %>
                            <b class="caret"></b>
                            <br>
                            <%= "#{current_user.points} points" %>
                          </a>
                          <ul class="dropdown-menu">
                            <% if current_order %>
                            <li><%= link_to "Cart: (#{current_order.item_count}) $#{current_order.total}", "#{store_path}cart" %></li>
                            <li class="divider"></li>
                            <% end %>
                            <% if can? :show, :admin_link %>
                            <li><%= link_to "Admin", admin_path %></li>
                            <li class="divider"></li>
                            <% end %>
                            <li><%= link_to "Streams", user_streams_path %></li>
                            <li><%= link_to "Teams", teams_path %></li>
                            <li><%= link_to "Tournaments", user_tournaments_path %></li>
                            <li class="divider"></li>
                            <li><%= link_to "Profile", user_profile_path(current_user) %></li>
                            <li><%= link_to "Friends", friends_path %></li>
                            <li><%= link_to "Settings", settings_path %></li>
                            <li class="divider"></li>
                            <li><%= link_to "Logout", destroy_user_session_path, :method=>'delete' %></li>
                          </ul>
                        </li>
                      <% else %>
                        <li><%= link_to("Login", new_user_session_path, :class => "") %></li>
                        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                          <li><%= link_to("Register", new_user_registration_path, :class => "") %></li>
                        <% end %>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

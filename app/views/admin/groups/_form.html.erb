<div class="page-header">
  <h3>Group Information</h3>
</div>

<%= form_for [:admin, @group], :html => { :class => '' } do |f| %>
  <div class="container-fluid">
    <div class="row-fluid">

      <div class="span6">
        <div class="control-group">
          <%= f.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :name, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :prefix, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :prefix, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :sort_order, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :sort_order, :class => 'text_field' %>
          </div>
        </div>
      </div>

      <div class="span6">
        <div class="control-group">
          <%= f.label :permissions, :class => 'control-label' %>
          <div class="controls">
            <ul class="nav nav-list">
              <% @permissions.each do |permission| %>
                <li>
                  <%= check_box_tag "group[permissions][]", permission.id, @group.permissions && @group.permissions.include?(permission.id.to_s), id: "permission_#{permission.id.to_s}" %>
                  <%= label nil, permission.id, :for => "permission_#{permission.id.to_s}" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  admin_groups_path, :class => 'btn' %>
    </div>
  </div>
<% end %>

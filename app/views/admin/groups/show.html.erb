<%= javascript_include_tag "admin/groups" %>
<div class="container-fluid">
  <div class="row-fluid">

    <div class="span8">
      <%= render :partial => 'form' %>
    </div>

    <div id="group-users" class="span4">
      <div class="page-header">
        <h3>Users</h3>
      </div>

      <div class="thumbnail">
        <div class="caption">
          <%= form_for :user, url: admin_group_users_path(@group), html: {autocomplete: :off, :class => 'typeahead'} do |f| %>
            <div class="control-group">
              <%= f.text_field :username, :class => 'search-query', placeholder: 'Add User' %>
            </div>
            <%= f.submit nil, style: "position: absolute; left: -9999px; width: 1px; height: 1px;" %>
          <% end %>
          <% unless @group_users.empty? %>
            <ul>
              <% @group_users.each do |user| %>
                <li>
                  <div class="control-group">
                    <%= user.try(:username) %>
                    <div class="pull-right">
                      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              admin_group_user_path(@group, user),
                              :method => 'delete',
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-mini btn-danger' %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

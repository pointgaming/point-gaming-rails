<%- model_class = GameType -%>
<%= javascript_include_tag "admin/game_types" %>

<div class="widget widget-nopad">
  <div class="widget-header">
    <h3>Games Types</h3>
  </div>
  <div class="widget-content">
    <div class="widget-padding-container">
      <div class="control-group"> 
        <%= label :game, :game, :for => 'game_id', :class => 'control-label' %>
        <div class="controls">
          <%= select :game, :id, 
                @games.collect {|g| [ g.name, g.id ]},  
                include_blank: '- Select -'
          %>  
        </div>
      </div>
    </div>
  </div>
</div>

<% if @game.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:sort_order) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @game.types.order_by(sort_order: :asc).each do |game_type| %>
        <tr>
          <td><%= game_type.name %></td>
          <td><%= game_type.sort_order %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_admin_game_type_path(game_type), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        admin_game_type_path(game_type),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_admin_game_type_path(game_id: @game.id),
              :class => 'btn' %>
<% end %>

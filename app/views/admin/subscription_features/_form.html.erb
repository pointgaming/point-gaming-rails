<%= form_for [:admin, @subscription_feature], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :sort_order, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sort_order, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_subscription_features_path, :class => 'btn' %>
  </div>
<% end %>

<%- hide_cancel_button = hide_cancel_button || false %>
<%= form_for [@news, @comment], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :text, :class => 'text_field', rows: 8, style: "width: 500px" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn' %>
    <% unless hide_cancel_button %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        @news, :class => 'btn' %>
    <% end %>
  </div>
<% end %>

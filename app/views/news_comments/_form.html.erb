<%- hide_cancel_button = hide_cancel_button || false %>
<%= form_for [@news, @comment], :html => { :class => 'form-horizontal' } do |f| %>
  <div>
    <div class="well">
      <%= f.text_area :text, :class => 'text_field span9', rows: 1 %>
      <%= f.submit nil, :class => 'btn span3' %>
      <% unless hide_cancel_button %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          @news, :class => 'btn span2' %>
      <% end %>
    </div>
  </div>
<% end %>

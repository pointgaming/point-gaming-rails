<div class="widget">
  <div class="widget-header">
    <i class="icon-tag icon-white"></i>
    <h3>Billing Information</h3>
    <%= link_to 'Change', edit_billing_path(1), :class => 'btn' %>
  </div>
  <div class="widget-content">
    <div class="container-fluid">
      <div class="row-fluid">

        <div class="span6">
          <div class="control-group">
            <label>Name</label>
            <div class="controls">
              <%= @stripe_customer.active_card.name %>
            </div>
          </div>

          <div class="control-group">
            <label>Number</label>
            <div class="controls">
              **** **** **** <%= @stripe_customer.active_card.last4 %>
            </div>
          </div>

          <div class="control-group">
            <label>Type</label>
            <div class="controls">
              <%= @stripe_customer.active_card.type %>
            </div>
          </div>

          <div class="control-group">
            <label>Expiration</label>
            <div class="controls">
              <%= @stripe_customer.active_card.exp_month %>
              / <%= @stripe_customer.active_card.exp_year %>
            </div>
          </div>
        </div>

        <div class="span6">
          <div class="control-group">
            <label>Address 1</label>
            <div class="controls">
              <%= @stripe_customer.active_card.address_line1 %>
            </div>
          </div>
  
          <% unless @stripe_customer.active_card.address_line2 %>
            <div class="control-group">
              <label>Address 2</label>
              <div class="controls">
                <%= @stripe_customer.active_card.address_line2 %>
              </div>
            </div>
          <% end %>

          <div class="control-group">
            <label>City</label>
            <div class="controls">
              <%= @stripe_customer.active_card.address_city %>
            </div>
          </div>

          <div class="control-group">
            <label>State</label>
            <div class="controls">
              <%= @stripe_customer.active_card.address_state %>
            </div>
          </div>

          <div class="control-group">
            <label>Zip</label>
            <div class="controls">
              <%= @stripe_customer.active_card.address_zip %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

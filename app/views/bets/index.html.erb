<%- model_class = Bet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:_type) %></th>
      <th><%= model_class.human_attribute_name(:_id) %></th>
      <th><%= model_class.human_attribute_name(:offerer_choice) %></th>
      <th><%= model_class.human_attribute_name(:taker_choice) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:odds) %></th>
      <th><%= model_class.human_attribute_name(:stream_id) %></th>
      <th><%= model_class.human_attribute_name(:offerer_id) %></th>
      <th><%= model_class.human_attribute_name(:taker_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= link_to bet.id, stream_bet_path(bet) %></td>
        <td><%= bet._type %></td>
        <td><%= bet._id %></td>
        <td><%= bet.offerer_choice %></td>
        <td><%= bet.taker_choice %></td>
        <td><%= bet.amount %></td>
        <td><%= bet.odds %></td>
        <td><%= bet.stream_id %></td>
        <td><%= bet.offerer_id %></td>
        <td><%= bet.taker_id %></td>
        <td><%=ldate bet.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_stream_bet_path(bet), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      stream_bet_path(bet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_stream_bet_path,
            :class => 'btn' %>

<%= form_for [@match, @bet] do |f| %>
  <div class="modal-body">
    <div class="control-group">
      <%= f.select :winner, @match.player_options, include_blank: '- Select -', :class => 'text_field' %> will beat 
      <%= f.select :loser, @match.player_options, include_blank: '- Select -', :class => 'text_field' %> on map 
      <%= f.text_field :map, :class => 'text_field', disabled: true %>
    </div>

    <div class="control-group">
      <%= f.label :amount, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :amount, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :odds, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :odds, f.object.odds_options, :class => 'text_field' %>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <%= f.submit nil, :class => 'btn' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            @match, :class => 'btn', 'data-dismiss' => 'modal' %>
  </div>
<% end %>

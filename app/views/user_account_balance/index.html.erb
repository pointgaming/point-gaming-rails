<div id="account-balance-widget" class="widget">
  <div class="widget-header">
    <i class="icon-tags icon-white"></i>
    <h3>Account Balance</h3>
  </div>
  <div class="widget-content">
    <table class="table table-bordered table-striped">
      <tbody>

        <tr>
          <td>
            <h4>
              Points
              <div class="pull-right">
                <% if @user.point_history.length > 0 %>
                  <%= link_to @user.points, user_points_path(@user.slug) %>
                <% else %>
                  <%= @user.points %>
                <% end %>
              </div>
            </h4>
          </td>
        </tr>

        <tr>
          <td>
            <h4>
              Cash
              <div class="pull-right">
                <% if @user.cash_history.length > 0 %>
                  <%= link_to number_to_currency(@user.cash), user_cash_index_path(@user.slug) %>
                <% else %>
                  <%= number_to_currency(@user.cash) %>
                <% end %>
              </div>
              <div class="sub-heading">
                Tournament winnings and stream commissions
              </div>
            </h4>
          </td>
        </tr>

        <tr>
          <td>
            <h4>
              Pro Subscriptions
              <div class="pull-right">
                <% if @user_subscription.present? %>
                  <div class="pull-right">
                    <%= @user_subscription.days_until_expiration_date %>
                  </div>
                  <br />
                  <div class="sub-heading">
                    Expiration date <%= ldate @user_subscription.expiration_date %>
                  </div>
                <% else %>
                  0
                <% end %>
              </div>
            </h4>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<%= render 'transaction_history', transaction_history: @transaction_history %>

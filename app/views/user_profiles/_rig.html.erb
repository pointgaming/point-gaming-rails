        <label>Headset</label>
        <div class="controls">
          <%= model.headset %>
        </div>
      </div>
      <div class="control-group span3">
        <label>Microphone</label>
        <div class="controls">
          <%= model.microphone %>
        </div>
      </div>
    </div>

    <div class="controls controls-row">
      <div class="control-group span3">
        <label>Monitor</label>
        <div class="controls">
          <%= model.monitor %>
        </div>
      </div>
      <div class="control-group span3">

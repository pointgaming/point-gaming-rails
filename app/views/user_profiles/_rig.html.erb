        <label>Case</label>
        <div class="controls">
          <%= model.case %>
        </div>
      </div>
      <div class="control-group span3">
        <label>Power Supply</label>
        <div class="controls">
          <%= model.power_supply %>
        </div>
      </div>
      <div class="control-group span3">
        <label>OS</label>

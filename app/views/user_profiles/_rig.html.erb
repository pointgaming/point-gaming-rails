          <%= model.operating_system %>
        </div>
      </div>
    </div>

    <div class="controls controls-row">
      <div class="control-group span3">
        <label>Motherboard</label>
        <div class="controls">
          <%= model.motherboard %>
        </div>
      </div>
      <div class="control-group span3">
        <label>CPU</label>
        <div class="controls">
          <%= model.cpu %>
        </div>
      </div>
      <div class="control-group span3">
        <label>Memory</label>
        <div class="controls">
          <%= model.memory %>
        </div>
      </div>

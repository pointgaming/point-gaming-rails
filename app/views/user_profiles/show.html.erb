<%- model_class = Profile -%>
<div class="page-header">
  <h1><%= @user.username.pluralize %> <%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="breadcrumb">
  <% if @user._id === current_user._id %>
    <%= link_to 'Edit Profile', edit_user_profile_path(@user), :class => 'btn' %>
  <% else %>
    <%= link_to 'Send Friend Request',
          friend_requests_path(username: @user.username),
          :method => :post,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-primary' %>
  <% end %>
</div>

<div class="row-fluid">
  <div class="span3">
    <%= render partial: 'user_profiles/user_image', locals: {model: @user} %>
  </div>
  <div class="span9">
    <%= render partial: 'user_profiles/user_info', locals: {model: @user} %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= render partial: 'user_profiles/friends', locals: {models: @friends, user: @user} %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= render partial: 'user_profiles/match_history', locals: {models: @matches} %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= render partial: 'user_profiles/rig', locals: {model: @user.profile.try(:rig)} %>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <%= render partial: 'user_profiles/configs', locals: {models: @user.configs} %>
  </div>
  <div class="span6">
    <%= render partial: 'user_profiles/bio', locals: {model: @user.profile} %>
  </div>
</div>

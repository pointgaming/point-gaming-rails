<div class="row-fluid">
  <%= link_to "New", new_admin_news_path, class: "btn" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= link_to news.title, news_path(news) %></td>
        <td>
          <%= link_to "Edit", edit_admin_news_path(news), class: "btn btn-mini" %>
          <%= link_to "Destroy", admin_news_path(news), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-mini btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

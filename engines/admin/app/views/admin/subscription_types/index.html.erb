<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @subscription_types.each do |subscription_type| %>
      <tr>
        <td><%= link_to subscription_type.name, admin_subscription_type_path(subscription_type) %></td>
        <td>
          <%= link_to "Edit", edit_admin_subscription_type_path(subscription_type), class: "btn btn-mini" %>
          <%= link_to "Destroy", admin_subscription_type_path(subscription_type), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-mini btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New", new_admin_subscription_type_path, class: "btn" %>

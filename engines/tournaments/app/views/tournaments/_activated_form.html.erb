<div class="row-fluid" id="tournaments">
  <h1>Editing Tournament: <%= @tournament %></h1>

  <div class="row-fluid">
    <div class="span12">
      <ul class="nav nav-tabs" id="tournament-tabs">
        <li><a href="#details">Rules</a></li>
        <li><a href="#control">Control Panel</a></li>
        <li><a href="#seeds">Seeds</a></li>
        <li><a href="#users">Admins &amp; Invites</a></li>
      </ul>
    </div>
  </div>

  <div class="tab-content">
    <div class="tab-pane" id="details">
      <%= form_for @tournament, html: { class: "" } do |f| %>
        <%= render partial: "shared/form_errors", locals: { model: f.object } %>

        <div class="row-fluid">
          <div class="span6">
            <fieldset>
              <legend>Rules &amp; Details</legend>

              <%= f.text_area :details, rows: 24 %>
            </fieldset>
          </div>

          <div class="span6">
            <fieldset>
              <legend>Preview</legend>

              <div id="details-preview">
                <%= render partial: "/tournaments/widgets/rules" %>
              </div>
            </fieldset>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="form-actions">
              <%= f.submit "Save", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="tab-pane" id="control">
      <div class="row-fluid">
        wut
      </div>
    </div>

    <div class="tab-pane" id="seeds">
      <div class="row-fluid">
        <div class="span6">
          <p>Drag players to set their seed in the tournament.</p>

          <div class="widget">
            <div class="widget-header">
              <h3>Players</h3>
            </div>

            <div class="widget-content">
              <% if @tournament.players.present? %>
                <ol class="tourney-players sortable">
                  <% @tournament.players.each do |player| %>
                    <li class="draggable" data-id="<%= player.id %>">
                      <%= link_to "[x]", "#", class: "remove-player", data: { tournament_id: @tournament.slug, id: player.id.to_s, confirm: "Are you sure?" } %>
                      <%= player.username %>
                    </li>
                  <% end %>
                </ol>
              <% else %>
                  No tournament players to seed yet.
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="tab-pane" id="users">
      <div class="row-fluid">
        <div class="span6">
          <%= render "/admins/index" %>
        </div>

        <div class="span6">
          <%= render "/invites/index" %>
        </div>
      </div>
    </div>
  </div>
</div>

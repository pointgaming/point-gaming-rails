<div class="row-fluid" id="tournaments">
  <h1>Edit Tournament</h1>

  <%= render "workflow_navigation" %>

  <div class="row-fluid">
    <div class="span6">
      <p>Drag players to set their seed in the tournament.</p>

      <div class="widget">
        <div class="widget-header">
          <h3>Players</h3>
        </div>

        <div class="widget-content">
          <ol class="tourney-players sortable">
            <% @tournament.seeds.each do |id| %>
              <% player = Player.find(id) %>
              <li class="draggable" data-id="<%= id %>"><%= player.user.username %></li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
